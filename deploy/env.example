# DevInfra OpsHub Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/opshub"

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# JWT Configuration
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-here"
TEST_JWT_SECRET="your-test-jwt-secret-here"

# =============================================================================
# GitHub OAuth Configuration
# =============================================================================
# Create a GitHub OAuth app at: https://github.com/settings/applications/new
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_WEBHOOK_SECRET="your-github-webhook-secret"

# =============================================================================
# Encryption Configuration
# =============================================================================
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY_BASE64="your-32-byte-base64-encryption-key"

# =============================================================================
# Application URLs
# =============================================================================
API_BASE_URL="http://localhost:4000"
WEB_BASE_URL="http://localhost:3000"

# =============================================================================
# Provider Configuration (Optional)
# =============================================================================
# Vercel
VERCEL_TOKEN="your-vercel-token"
VERCEL_PROJECT_ID="your-vercel-project-id"

# Netlify
NETLIFY_TOKEN="your-netlify-token"
NETLIFY_SITE_ID="your-netlify-site-id"

# =============================================================================
# Slack Configuration (Optional)
# =============================================================================
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_CHANNEL="your-slack-channel-id"

# =============================================================================
# Development/Testing Flags
# =============================================================================
# Set to 1 to enable test login (development only)
ALLOW_TEST_LOGIN=0

# Set to 1 to disable Slack notifications (testing)
DISABLE_SLACK=0

# Set to 1 to use mock provider (testing)
USE_MOCK_PROVIDER=0

# =============================================================================
# Feature Flags
# =============================================================================
# Set to 1 to enable demo mode with guided steps and safe toggles
DEMO_MODE=0

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL="info"

# =============================================================================
# Production Configuration
# =============================================================================
NODE_ENV="development"
